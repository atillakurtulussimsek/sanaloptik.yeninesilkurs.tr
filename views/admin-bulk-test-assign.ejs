  <script>
    let testValidationTimer;
    let testCodeValid = false;
    
    function validateStudentNumbers() {
      const textarea = document.getElementById('student_numbers');
      const counter = document.getElementById('studentCounter');
      const validation = document.getElementById('studentValidation');
      
      const text = textarea.value.trim();
      if (!text) {
        counter.textContent = '0 Ã¶ÄŸrenci';
        validation.style.display = 'none';
        return;
      }
      
      const numbers = text
        .split(/[\n,\s]+/)
        .map(num => num.trim())
        .filter(num => num.length > 0);
      
      counter.textContent = `${numbers.length} Ã¶ÄŸrenci`;
      
      // Basit validasyon - sayÄ±sal deÄŸerler kontrolÃ¼
      const invalidNumbers = numbers.filter(num => !/^\d+$/.test(num));
      
      if (invalidNumbers.length > 0) {
        validation.textContent = `âš ï¸ GeÃ§ersiz numaralar: ${invalidNumbers.slice(0, 3).join(', ')}${invalidNumbers.length > 3 ? '...' : ''}`;
        validation.className = 'validation-status invalid';
      } else if (numbers.length > 0) {
        validation.textContent = `âœ… ${numbers.length} geÃ§erli Ã¶ÄŸrenci numarasÄ±`;
        validation.className = 'validation-status valid';
      }
      
      updateSubmitButton();
    }
    
    function validateTestCode() {
      const input = document.getElementById('test_code');
      const validation = document.getElementById('testValidation');
      
      clearTimeout(testValidationTimer);
      
      let testCode = input.value.trim().toUpperCase();
      input.value = testCode;
      
      if (!testCode) {
        validation.style.display = 'none';
        testCodeValid = false;
        updateSubmitButton();
        return;
      }
      
      // Test kodu/Ã¶zel ad formatÄ±nÄ± kontrol et
      let actualTestCode = testCode;
      let customTestName = null;
      
      if (testCode.includes('/')) {
        const parts = testCode.split('/');
        if (parts.length === 2) {
          actualTestCode = parts[0].trim();
          customTestName = parts[1].trim();
          
          if (!actualTestCode) {
            validation.textContent = 'âŒ Test kodu kÄ±smÄ± boÅŸ olamaz';
            validation.className = 'validation-status invalid';
            validation.style.display = 'block';
            testCodeValid = false;
            updateSubmitButton();
            return;
          }
          
          if (!customTestName) {
            validation.textContent = 'âŒ "/" sonrasÄ± Ã¶zel ad boÅŸ olamaz';
            validation.className = 'validation-status invalid';
            validation.style.display = 'block';
            testCodeValid = false;
            updateSubmitButton();
            return;
          }
          
          validation.textContent = `ğŸ¯ Test: ${actualTestCode} | Ã–zel Ad: "${customTestName}" - Kontrol ediliyor...`;
        } else {
          validation.textContent = 'âŒ Sadece bir "/" kullanÄ±n (Ã–rn: TEST001/Ã–zel Ad)';
          validation.className = 'validation-status invalid';
          validation.style.display = 'block';
          testCodeValid = false;
          updateSubmitButton();
          return;
        }
      } else {
        validation.textContent = 'ğŸ” Kontrol ediliyor...';
      }
      
      validation.className = 'validation-status';
      validation.style.display = 'block';
      
      testValidationTimer = setTimeout(() => {
        fetch(`/admin/test-havuz-kontrol?kod=${encodeURIComponent(actualTestCode)}`)
          .then(response => response.json())
          .then(data => {
            if (data.bulundu) {
              if (customTestName) {
                validation.textContent = `âœ… Test bulundu: ${data.test_adi} | Ã–zel ad: "${customTestName}" ile atanacak`;
              } else {
                validation.textContent = `âœ… Test bulundu: ${data.test_adi}`;
              }
              validation.className = 'validation-status valid';
              testCodeValid = true;
            } else {
              validation.textContent = `âŒ Test kodu bulunamadÄ±: ${actualTestCode}`;
              validation.className = 'validation-status invalid';
              testCodeValid = false;
            }
            updateSubmitButton();
          })
          .catch(error => {
            console.error('Test kontrol hatasÄ±:', error);
            validation.textContent = 'âš ï¸ Kontrol edilemedi';
            validation.className = 'validation-status invalid';
            testCodeValid = false;
            updateSubmitButton();
          });
      }, 500);
    }
    
    function updateSubmitButton() {
      const submitBtn = document.getElementById('submitBtn');
      const studentNumbers = document.getElementById('student_numbers').value.trim();
      const testCode = document.getElementById('test_code').value.trim();
      
      const hasStudents = studentNumbers.length > 0;
      const hasTestCode = testCode.length > 0;
      
      submitBtn.disabled = !(hasStudents && hasTestCode && testCodeValid);
    }
    
    function clearForm() {
      document.getElementById('bulkAssignForm').reset();
      document.getElementById('studentCounter').textContent = '0 Ã¶ÄŸrenci';
      document.getElementById('studentValidation').style.display = 'none';
      document.getElementById('testValidation').style.display = 'none';
      testCodeValid = false;
      updateSubmitButton();
    }
    
    // Form submit olduÄŸunda loading gÃ¶ster
    document.getElementById('bulkAssignForm').addEventListener('submit', function(e) {
      const loading = document.getElementById('loading');
      const submitBtn = document.getElementById('submitBtn');
      
      loading.style.display = 'block';
      submitBtn.disabled = true;
      submitBtn.textContent = 'Ä°ÅŸleniyor...';
      
      // Ä°ÅŸlem sÃ¼resini simÃ¼le et (gerÃ§ek iÅŸlemde kaldÄ±rÄ±labilir)
      const progressBar = document.getElementById('progressBar');
      const progressFill = document.getElementById('progressFill');
      progressBar.style.display = 'block';
      
      let progress = 0;
      const interval = setInterval(() => {
        progress += Math.random() * 20;
        if (progress > 90) progress = 90;
        progressFill.style.width = progress + '%';
      }, 100);
      
      // Form submit edildikten sonra interval'Ä± temizle
      setTimeout(() => {
        clearInterval(interval);
        progressFill.style.width = '100%';
      }, 2000);
    });
    
    // Sayfa yÃ¼klendiÄŸinde buton durumunu kontrol et
    document.addEventListener('DOMContentLoaded', function() {
      updateSubmitButton();
      
      // Test kodu input'una focus olduÄŸunda bÃ¼yÃ¼k harfe Ã§evir
      document.getElementById('test_code').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
      });
    });
  </script>
