    }
    
    .progress-bar {
      width: 100%;
      height: 8px;
      background: #e2e8f0;
      border-radius: 4px;
      margin-top: 10px;
      overflow: hidden;
      display: none;
    }
    
    .progress-fill {
      height: 100%;
      background: linear-gradient(135deg, #4299e1, #3182ce);
      width: 0%;
      transition: width 0.3s ease;
    }
  </style>
