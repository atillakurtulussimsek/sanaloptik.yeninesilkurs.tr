        <strong>‚ö†Ô∏è Hata!</strong> <%= hata %>
      </div>
    <% } %>
    
    <form method="POST" action="/admin/giris">
      <div class="form-group">
        <label for="kullanici_adi">Kullanƒ±cƒ± Adƒ±</label>
        <input 
